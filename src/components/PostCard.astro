---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import ArrowRight from "./icons/ArrowRight.astro";
import Tag from "./Tag.astro";
interface Props {
  title: string;
  date: string;
  url: string;
  tags: string[];
  cover?: { src: ImageMetadata; alt: string };
}
const { title, date, url, tags, cover } = Astro.props;
---

<a
  href={`/${url}`}
  class="hover:bg-foreground/8 group flex items-center justify-between gap-3 rounded-lg p-3 transition-all duration-150 ease-in-out"
>
  <div class="flex items-center gap-4">
    {cover && (
      <Image
        src={cover.src}
        alt={cover.alt}
        class="hidden sm:block h-20 w-28 shrink-0 rounded-lg object-cover"
        widths={[112, 224]}
        sizes="112px"
      />
    )}
    <div class="flex flex-col gap-2">
      <h3 class="text-xl font-medium">{title}</h3>
      <span class="text-sm opacity-60">{date}</span>
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag: string) => (
            <Tag>{tag}</Tag>
          ))
        }
      </div>
    </div>
  </div>
  <ArrowRight class="group-hover:text-accent shrink-0 transition-all duration-150 ease-in-out group-hover:translate-x-1" />
</a>
