---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
interface Props {
  title: string;
  date: string;
  url: string;
  tags: string[];
  cover?: { src: ImageMetadata; alt: string };
}
const { title, date, url, tags, cover } = Astro.props;
---

<a
  href={`/${url}`}
  class="hover:bg-foreground/8 group flex items-center justify-between gap-3 rounded-lg p-3 transition-all duration-150 ease-in-out"
>
  <div class="flex items-center gap-4">
    {cover && (
      <Image
        src={cover.src}
        alt={cover.alt}
        class="hidden sm:block h-20 w-28 shrink-0 rounded-lg object-cover"
        widths={[112, 224]}
        sizes="112px"
      />
    )}
    <div class="flex flex-col gap-2">
      <h3 class="text-xl font-medium">{title}</h3>
      <span class="text-sm opacity-60">{date}</span>
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag: string) => (
            <span class="bg-foreground/13 rounded-lg px-2 py-0.5 text-sm">
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:text-accent shrink-0 transition-all duration-150 ease-in-out group-hover:translate-x-1">
    <path d="M5 12h14" />
    <path d="m12 5 7 7-7 7" />
  </svg>
</a>
