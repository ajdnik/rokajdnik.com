---
import GitHubIcon from "./icons/GitHub.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
---

<div class="flex gap-6">
  <a
    href="https://github.com/ajdnik"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="GitHub"
    class="socials animation"
  >
    <GitHubIcon stroke-width="1.5" />
  </a>
  <a
    href="https://linkedin.com/in/rokajdnik"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="LinkedIn"
    class="socials animation"
  >
    <LinkedInIcon stroke-width="1.5" />
  </a>
  <a
    href="https://stackoverflow.com/users/4182991/rok-ajdnik"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Stack Overflow"
    class="socials animation"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M18 20.5v-11l-6-5-6 5v11" />
      <path d="M4 20.5h16" />
      <path d="M8 16.5h8" />
      <path d="M8 12.5l8 1" />
      <path d="M8 8.5l8 3" />
    </svg>
  </a>
  <a
    href="https://medium.com/@r.ajdnik"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Medium"
    class="socials animation"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="4" y="4" width="16" height="16" rx="2" />
      <ellipse cx="9" cy="12" rx="2.5" ry="4" />
      <ellipse cx="15" cy="12" rx="1.5" ry="4" />
      <line x1="19" y1="8" x2="19" y2="16" />
    </svg>
  </a>
  <a
    href="https://ajdnik.hashnode.dev"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Hashnode"
    class="socials animation"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="9" />
      <circle cx="12" cy="12" r="4" />
    </svg>
  </a>
  <a
    href="https://dev.to/ajdnik"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="DEV.to"
    class="socials animation"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="3" y="5" width="18" height="14" rx="3" />
      <path d="M7 9v6" />
      <path d="M7 9c2 0 3 1.5 3 3s-1 3-3 3" />
      <path d="M13 9v6" />
      <path d="M13 9h2" />
      <path d="M13 12h1.5" />
      <path d="M13 15h2" />
    </svg>
  </a>
  <a
    href="mailto:hi@rokajdnik.com?subject=Hello"
    aria-label="Email"
    class="socials animation"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="4" width="20" height="16" rx="2" />
      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
    </svg>
  </a>
</div>
