---
export interface Props {
  title: string;
  description?: string;
  url?: string;
  author?: string;
  canonicalURL?: string;
  pubDate?: Date;
  image?: string;
}

const {
  title = "Rok Ajdnik",
  description = "Personal blog and portfolio of Rok Ajdnik",
  author = "Rok Ajdnik",
  canonicalURL = new URL(Astro.url.pathname, Astro.url),
  pubDate,
  image,
} = Astro.props;

const absoluteImageUrl = image ? new URL(image, Astro.site).href : undefined;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{absoluteImageUrl && <meta property="og:image" content={absoluteImageUrl} />}

<!-- Twitter -->
<meta property="twitter:card" content={absoluteImageUrl ? "summary_large_image" : "summary"} />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
{absoluteImageUrl && <meta property="twitter:image" content={absoluteImageUrl} />}

{
  pubDate && (
    <meta property="article:published_time" content={pubDate.toISOString()} />
  )
}

<meta name="author" content={author} />

<link rel="canonical" href={canonicalURL} />

<link rel="sitemap" href="/sitemap-index.xml" />

<link
  rel="alternate"
  type="application/rss+xml"
  title="RSS Feed"
  href="/rss.xml"
/>
